################
# ~/.Renviron  #
################

R_ENVIRON_USER=${R_USER}/.R/.Renviron

R_PROFILE_USER=${HOME}/.R/Rprofile
R_HISTFILE=${HOME}/.R/Rhistory

# Per-version user library (recommended)
R_LIBS_USER=${HOME}/R/%p-library/%v

# Locale (prevents nvimcom omnils failures)
LANG=C.UTF-8
LC_ALL=C.UTF-8
LC_CTYPE=C.UTF-8
