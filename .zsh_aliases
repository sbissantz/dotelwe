# --------------------------------------------------
# ~/.zsh_aliases
# --------------------------------------------------
# simple command aliases 

# --------------------------------------------------
# cd
# --------------------------------------------------
#
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../'

# --------------------------------------------------
# chmod
# --------------------------------------------------

alias chmod='chmod -v'

# --------------------------------------------------
# clear
# --------------------------------------------------

alias c='clear'

# --------------------------------------------------
# cp
# --------------------------------------------------

alias cp='cp -vi'

# --------------------------------------------------
# elwe 
# --------------------------------------------------

# elwe is a set of functions â€“ see .zsh_functions for details
# e.g. elwe hi, elwe push, elwe pull, elwe sync

# --------------------------------------------------
# grep
# --------------------------------------------------

alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# --------------------------------------------------
# git
# --------------------------------------------------

alias g="git"

# --------------------------------------------------
# ip 
# --------------------------------------------------

# external ip
alias ipe='curl ipinfo.io/ip'

# local ip
alias ipi='ipconfig getifaddr en0'

# --------------------------------------------------
# ls
# --------------------------------------------------

alias ls='ls -F --color=auto --group-directories-first'
alias l='ls'
alias lt='ls -Fth --color=auto --group-directories-first'
alias ll='ls -lhFt --color=auto --group-directories-first'
alias la='ls -alhFt --color=auto --group-directories-first'

# --------------------------------------------------
# mv
# --------------------------------------------------

alias mv='mv -vi'

# --------------------------------------------------
# ping
# --------------------------------------------------

alias ping='ping -c 5'

# --------------------------------------------------
# pwd 
# --------------------------------------------------

alias p='pwd'

# --------------------------------------------------
# rm 
# --------------------------------------------------

alias rm='rm -iv'

# --------------------------------------------------
# ranger
# --------------------------------------------------

alias r="ranger"

# --------------------------------------------------
# R
# --------------------------------------------------

alias R="R --quiet"
alias R-devel="R-devel --quiet"

# --------------------------------------------------
# tar
# --------------------------------------------------

alias untar='tar -zxvf'
alias tarit='tar -zcvf'

# --------------------------------------------------
# wget 
# --------------------------------------------------

alias wget='wget -c'
