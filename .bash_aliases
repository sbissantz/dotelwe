# -----------------------------------------------------------------------
# ~/.bash_aliases
# -----------------------------------------------------------------------
# simple, safe aliases for interactive bash sessions
# cluster-friendly, no surprises
# -----------------------------------------------------------------------

# -----------------------------------------------------------------------
# cd
# -----------------------------------------------------------------------
alias ..='cd ..'
alias ...='cd ../../../'
alias ....='cd ../../../../'
alias .....='cd ../../../../../'

# -----------------------------------------------------------------------
# clear / pwd
# -----------------------------------------------------------------------
alias c='clear'
alias p='pwd'

# -----------------------------------------------------------------------
# file operations (interactive safety)
# -----------------------------------------------------------------------
alias cp='cp -vi'
alias mv='mv -vi'
alias rm='rm -iv'
alias mkdir='mkdir -pv'
alias chmod='chmod -v'

# -----------------------------------------------------------------------
# grep
# -----------------------------------------------------------------------
alias grep='grep --color=auto'
alias egrep='grep -E --color=auto'
alias fgrep='grep -F --color=auto'

# -----------------------------------------------------------------------
# git
# -----------------------------------------------------------------------
alias g='git'

# -----------------------------------------------------------------------
# ip
# -----------------------------------------------------------------------
# external IP
alias ipe='curl -s ipinfo.io/ip'

# local IP (portable)
if command -v ipconfig >/dev/null 2>&1; then
  alias ipi='ipconfig getifaddr en0'
else
  alias ipi='hostname -I'
fi

# -----------------------------------------------------------------------
# ls
# -----------------------------------------------------------------------
if ls --group-directories-first >/dev/null 2>&1; then
  alias ls='ls -F --color=auto --group-directories-first'
else
  alias ls='ls -F --color=auto'
fi

alias l='ls'
alias lt='ls -Fth'
alias ll='ls -lhFt'
alias la='ls -alhFt'

# -----------------------------------------------------------------------
# networking
# -----------------------------------------------------------------------
alias ping='ping -c 5'

# -----------------------------------------------------------------------
# pager / disk usage
# -----------------------------------------------------------------------
alias df='df -h'
alias du='du -h'

# -----------------------------------------------------------------------
# watch
# -----------------------------------------------------------------------
alias w='watch -n 2'

# -----------------------------------------------------------------------
# ranger
# -----------------------------------------------------------------------
alias r='ranger'

# -----------------------------------------------------------------------
# R
# -----------------------------------------------------------------------
alias R='R --quiet'
alias 'R-devel=R-devel --quiet'

# -----------------------------------------------------------------------
# tar
# -----------------------------------------------------------------------
alias untar='tar -zxvf'
alias tarit='tar -zcvf'

# -----------------------------------------------------------------------
# wget
# -----------------------------------------------------------------------
alias wget='wget -c'

